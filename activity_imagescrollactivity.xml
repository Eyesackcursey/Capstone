<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/button"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:text="Return"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toBottomOf="@id/imageView2"
        app:layout_constraintBottom_toTopOf="@id/button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:ignore="NotSibling">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">



            <ImageView
                android:id="@+id/exitleft"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:src="@drawable/exitleft"
                android:scaleType="centerCrop" />

            <ImageView
                android:id="@+id/exitright"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:src="@drawable/exitright"
                android:scaleType="centerCrop" />

            <ImageView
                android:id="@+id/ra_exitleft"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:src="@drawable/ra_exitleft"
                android:scaleType="centerCrop" />

            <ImageView
                android:id="@+id/ra_exitright"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:src="@drawable/ra_exitright"
                android:scaleType="centerCrop" />

            <ImageView
                android:id="@+id/ra_exitstraight"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:src="@drawable/ra_exitstraight"
                android:scaleType="centerCrop" />

            <ImageView
                android:id="@+id/straightarrow"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:src="@drawable/straightarrow"
                android:scaleType="centerCrop" />

            <ImageView
                android:id="@+id/turnleft"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:scaleType="centerCrop"
                android:src="@drawable/turnleft" />

            <ImageView
                android:id="@+id/turnright"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:scaleType="centerCrop"
                android:src="@drawable/turnright" />

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>